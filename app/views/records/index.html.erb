<div class='container mt-5'>
    <h1 style="font-size: 75px; font-family: 'Indie Flower', cursive; color: white; text-align: center;">
        <strong>myTimer</strong> <%= icon('far', 'clock', class: 'strong') %>
    </h1>

    <h3 class="mt-5" style="font-family: 'Varela Round', sans-serif; color: white; text-align: center;">
        view your stats.
    </h3>

    <div align="center" class="mt-3">
        <button class="btn btn-danger" type="button" data-toggle="collapse" data-target="#optionCollapse" aria-expanded="false" aria-controls="optionCollapse">
            view options
        </button>
    </div>

    <div class="collapse" id="optionCollapse">
        <h5 class="mt-2" style="font-family: 'Varela Round', sans-serif; color: white; text-align: center;" id='sess-msg'>
            get records from:
        </h5>
        <div class="row">
            <div class="col">

            </div>

            <div class="col" align="center">
                <a class="btn btn-danger option-btn" href="/stats/year">
                    this year
                </a>
            </div>
            <div class="col" align="center">
                <a class="btn btn-danger option-btn" href="/stats/month">
                    this month
                </a>
            </div>
            <div class="col" align="center">
                <a class="btn btn-danger option-btn" href="/stats/week">
                    this week
                </a>
            </div>
            <div class="col" align="center">
                <a class="btn btn-danger option-btn" href="/stats/day">
                    today
                </a>
            </div>

            <div class="col">
                
            </div>
        </div>
    </div>

    <div class="mt-2">
        <% chartData = [{name: "Failures", data: @failures}, {name: "Successes", data: @successes}] %>
        <%= column_chart chartData, id: "bar-chart", xtitle: "Month/Day/Hour", ytitle: "Minutes",
            height: "400px", messages: {empty: "No data to show!"}, 
            library: {scales: {xAxes: [{ticks: {reverse: false}}]}} %>       
    </div>

    <br>
    <div align='center' id="exit-link">
        <a href='/welcome' style='color:black;'>&larr; go back to home page.</a>
    </div>
    
</div>