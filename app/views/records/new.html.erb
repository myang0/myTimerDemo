<!-- For the timer functionality -->
<%= javascript_pack_tag 'timer', 'data-turbolinks-track': 'reload' %>
<div class='container mt-5'>
    <h1 style="font-size: 75px; font-family: 'Indie Flower', cursive; color: white; text-align: center;">
        <strong>myTimer</strong> <%= icon('far', 'clock', class: 'strong') %>
    </h1>
    <br><br>
    <h3 style="font-family: 'Varela Round', sans-serif; color: white; text-align: center;" id='sess-msg'>
        begin a new session.
    </h3>

    <div class="row mt-5">
        <div class='col-4'></div>
        <div class='col-4 p-5 rounded-lg' id='timer' align='center'>00:00</div>
        <div class='col-4'></div>
    </div>
    
    <div class='row mt-3'>
        <div class='col' align='right'>
            <button type='button' class='btn btn-danger change-time-btn' id='sub-btn'>
                <strong>-</strong>
            </button>
        </div>
        <div class='col'>
            <button type='button' class='btn btn-danger change-time-btn' id='add-btn'>
                <strong>+</strong>
            </button>
        </div>
    </div>

    <div align='center' class='mt-3'>
        <input type="number" placeholder="enter time (in minutes) here." id="time-input" min="5" max="60" value="25">
    </div>

    <div align='center' class='mt-3'>
        <button type='button' class='btn btn-danger p-3' id='start-button'>
            begin session!
        </button>
    </div>

    <div align='center' class='mt-3'>
        <span>
            <button type='button' class='btn btn-danger p-3 session-btn' style='display: none' id='cancel-btn'>

            </button>
        </span>
        <span>
            <button type='button' class='btn btn-danger p-3 session-btn' style='display: none' id='forfeit-btn'>
                give up
            </button>
        </span>
    </div>
    <div align='center'>
        <a href='/welcome' style='color:black;'>go back to home page.</a>
    </div>
</div>