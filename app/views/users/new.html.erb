<div class='container mt-5'>
    <h1 class='start-label'>create a new account.</h1>
    <div class='row'>
        <div class='col'>
            <div class='alert login-form-wrapper'>
                <%= form_for(@user) do |f| %>
                    <div>
                        <%= f.text_field :uname, :placeholder => 'username here' %><br>
                        <%= f.password_field :password, :placeholder => 'password here' %>
                    </div>
                    <br>
                    <div>
                        <%= f.submit "create account", class: 'reg-submit' %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class='col'>
            
        </div>
    </div>

    <a href='/' style='color:black;'>go back to login page.</a>
    
</div>